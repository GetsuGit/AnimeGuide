<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeGuide" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorPrimaryVariant">@color/background_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Toolbar background -->
        <item name="android:itemBackground">@color/background_soft</item>
        <item name="android:windowBackground">@color/background_soft</item>
        <item name="android:textColor">@color/anime_text</item>
        <item name="android:fontFamily">@font/century1</item>

    </style>

    <!-- Alert dialog -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- <item name="android:size">13dp</item> -->
        <item name="android:textColorPrimary">@color/anime_text</item>
        <item name="android:fontFamily">@font/century1</item>
        <item name="android:windowBackground">@color/background_soft</item>

    </style>

</resources>